<%- include('./partials/header') %>
    
    <div class="title">
        <h1>Blog...</h1>
    </div>

    <div class="row">
        <% blogPosts.forEach(post => { %>
            <div class="col-md-6 mt-4">
                <div class="card">
                    <div class="card-header">
                        <h4><%= post.title %></h4>
                    </div>
                    <div class="card-body">
                        <p>by: <%= post.auth %></p>
                        <p>Date: <%= post.createdAt.toLocaleDateString('en-GB') %></p>
                        <p><%- post.sanitizedHtml.substring(0, 100) %>...</p>
                        <a href="/blog/<%= post.slug %>" class="btn btn-sm">Read</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

<%- include('./partials/footer') %>