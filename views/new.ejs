<%- include('./partials/header') %>
    
    <h1>New Article</h1>

    <a href="/admin" class="btn btn-warning">Back</a>

    <form action="" method="POST" class="mt-4">
        <div class="mt-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" class="form-control" placeholder="Title.." />
        </div>
    
        <div class="mt-3">
            <label for="auth" class="form-label">Author</label>
            <input type="text" name="auth" class="form-control" placeholder="Author.." />
        </div>
    
        <div class="mt-3">
            <label for="title" class="form-label">Markdown</label>
            <textarea name="markdown" class="form-control"></textarea>
        </div>
    
    
        <div class="mt-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Password.." />
        </div>
    
        <div class="mt-3">
            <button type="submit" class="btn btn-info">Submit</button>
        </div>
    
    </form>

<%- include('./partials/footer') %>